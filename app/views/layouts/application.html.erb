<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
   <%= stylesheet_link_tag    'application','http://fonts.googleapis.com/css?family=Raleway:400, 700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="sidebar">
		<div id="img">
			<%= link_to root_path do %>
				<%= image_tag "fox.jpg"%>
			<%end%>
		</div> 
		
		<ul>
			<li class="category">Website</li>
			<li><%= link_to "Blog", root_path %></li>
			<li><%= link_to "About", about_path %></li>
		</ul>

		<ul>
			<li class="category">Sites</li>
			<li><a href="https://www.youtube.com/?hl=uk&gl=UA">Youtube</a></li>
			<li><a href="http://railstutorial.ru/chapters/4_0/beginning">RailsTutorial</a></li>
			<li><a href="https://www.google.com.ua/">Google</a></li>
		</ul>
		<% if !user_signed_in? %>
			<p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>
		<% end %>
	</div>

	<div id="main_content">
		
		<div id="header">
			<% if current_page?(root_path)%>
				<p>All Posts</p>
			<% elsif current_page?(about_path)%>
				<p>About</p>
			<% else %>
				<%= link_to "Back to all posts", root_path %>
			<% end %>
			
			<% if user_signed_in? %>
			<div class="buttons">
				<%= link_to '<button class="button"><strong>New Post</strong></button>'.html_safe, new_post_path %>
			
				<%= link_to '<button class="button"><strong>Log Out</strong></button>'.html_safe, destroy_user_session_path, method: :delete %>ï»¿


			</div>
			<% end %> 
		</div>

		<% flash.each do |name, msg|%>
			<%= content_tag(:div, msg, class: "alert")%>
		<%end%>

<%= yield %>
	</div>		


</body>
</html>
