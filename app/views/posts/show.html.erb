<div id="post_content">
	<h1 class="title">  
		<%= @post.title %>
	</h1>

	<p class="date">
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago <br>
			<% if user_signed_in? %>
			<br>
				<%= link_to '<button class="sb">Edit</button>'.html_safe, edit_post_path(@post) %>
				<%= link_to '<button class="sb">Delete</button>'.html_safe, post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
		<% end %>
	</p>

	<p class="body">
		<%= @post.body %>
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>

		<h3>Add a comment:</h3>
		<%= render "comments/form" %>
	</div>
</div>


